{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "repositories": [
    "jesperancinha/moving-objects-service-root"
  ],
  "platform": "gitlab",
  "username": "jesperancinha",
  "packageRules": [
    {
      "matchPackageNames": [
        "commons-io:commons-io"
      ],
      "allowedVersions": "!/20030203.000550$/",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "Angular and types updates",
      "matchPackagePrefixes": [
        "@angular/",
        "@angular-devkit/",
        "@babel/",
        "@material/",
        "@ngx-translate/",
        "@okta/",
        "@testing-library/",
        "@types/",
        "ngx-markdown/",
        "moment",
        "tslib",
        "typescript",
        "rxjs",
        "codelyzer",
        "d3-color",
        "core-js"
      ],
      "automerge": true
    },
    {
      "groupName": "Spring Boot Group",
      "matchPackagePrefixes": [
        "org.springframework.boot"
      ],
      "automerge": true
    },
    {
      "groupName": "Spring Group",
      "matchPackagePrefixes": [
        "org.springframework"
      ],
      "automerge": true
    },
    {
      "groupName": "Micrometer Group",
      "matchPackagePrefixes": [
        "io.micrometer"
      ],
      "automerge": true
    },
    {
      "groupName": "AssertJ Group",
      "matchPackagePrefixes": [
        "org.assertj"
      ],
      "automerge": true
    },
    {
      "groupName": "Okta",
      "matchPackagePrefixes": [
        "@okta/"
      ],
      "automerge": true
    }
  ]
}
